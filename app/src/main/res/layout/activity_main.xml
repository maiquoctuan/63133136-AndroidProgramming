<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/nutSO1"
        android:layout_width="146dp"
        android:layout_height="53dp"
        android:background="#003366"
        android:text="@string/button_1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/button_1_description"/>

    <Button
        android:id="@+id/nutSO2"
        android:layout_width="204dp"
        android:layout_height="101dp"
        android:background="#003366"
        android:text="@string/button_2"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#2196F3"
        android:textColorLink="#00B0FF"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="97dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/button_2_description"/>

    <Button
        android:id="@+id/nutSO3"
        android:layout_width="204dp"
        android:layout_height="73dp"
        android:background="#003366"
        android:text="@string/button_3"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="235dp"
        android:contentDescription="@string/button_3_description"/>

</androidx.constraintlayout.widget.ConstraintLayout>