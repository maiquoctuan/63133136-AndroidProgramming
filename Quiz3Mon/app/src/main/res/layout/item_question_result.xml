<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_question_result.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#EEEEEE"
    android:layout_marginBottom="8dp">

    <TextView android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu hỏi"
        android:textStyle="bold" />

    <TextView android:id="@+id/tvCorrectAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đáp án đúng:" />

    <TextView android:id="@+id/tvSelectedAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn chọn:" />

    <TextView android:id="@+id/tvIsCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✅ Đúng hoặc ❌ Sai"
        android:textStyle="italic"
        android:textColor="#FF0000"/>
</LinearLayout>
