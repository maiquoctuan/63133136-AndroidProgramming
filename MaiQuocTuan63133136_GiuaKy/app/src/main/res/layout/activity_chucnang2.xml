<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chucnang2"
    android:background="@drawable/chinh">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded"
        android:padding="12dp"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="53dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Logo NTU"
            android:src="@drawable/logontu" />

        <TextView
            android:layout_width="284dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Tính điểm trung bình môn học"
            android:textColor="#008EFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/edtQT"
        android:layout_width="268dp"
        android:layout_height="53dp"
        android:layout_marginTop="192dp"
        android:hint="Nhập điểm Quá trình (20%)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtGK"
        android:layout_width="264dp"
        android:layout_height="60dp"
        android:layout_marginTop="352dp"
        android:hint="Nhập điểm Giữa kỳ (30%)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <EditText
        android:id="@+id/edtCK"
        android:layout_width="269dp"
        android:layout_height="57dp"
        android:layout_marginTop="448dp"
        android:hint="Nhập điểm Cuối kỳ (50%)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTinhDiem"
        android:layout_width="137dp"
        android:layout_height="81dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="76dp"
        android:text="Tính điểm TB"
        android:textStyle="bold"
        android:backgroundTint="#E91E63"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtKetQua"
        android:layout_width="155dp"
        android:layout_height="100dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="64dp"
        android:text="Kết quả: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>