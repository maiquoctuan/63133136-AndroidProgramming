<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cau4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvGioiThieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THÔNG TIN MAI QUỐC TUẤN"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:layout_marginBottom="20dp"/>

        <!-- Đổi thành tên ảnh của bạn -->


        <!-- Layout chứa các ô thông tin (2 hàng) -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/mattoi"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_circle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Ô 1: SINH NGÀY -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:padding="12dp"
                android:layout_marginBottom="16dp">  <!-- Tăng khoảng cách -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📅 SINH NGÀY: 22/06/2003"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#008EFF"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Ô 2: MSSV -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:padding="12dp"
                android:layout_marginBottom="16dp">  <!-- Tăng khoảng cách -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎓 MSSV: 63133136"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#008EFF"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Ô 3: LỚP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:padding="12dp"
                android:layout_marginBottom="16dp">  <!-- Tăng khoảng cách -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🏫 LỚP: 63HTTT"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#008EFF"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Ô 4: TRƯỜNG -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:padding="12dp"
                android:layout_marginBottom="16dp">  <!-- Tăng khoảng cách -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🏛️ TRƯỜNG: ĐẠI HỌC NHA TRANG"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#008EFF"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Ô 5: QUÊ QUÁN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:padding="12dp"
                android:layout_marginBottom="16dp">  <!-- Tăng khoảng cách -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📍 QUÊ QUÁN: NHA TRANG, KHÁNH HÒA"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#008EFF"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
