<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main">

    <Button
        android:id="@+id/btnCau2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="460dp"
        android:backgroundTint="#00A6F1"
        android:text="Câu 2"
        app:layout_constraintStart_toEndOf="@id/btnCau1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCau4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00A6F1"
        android:text="Câu 4"
        app:layout_constraintStart_toEndOf="@id/btnCau3"
        app:layout_constraintTop_toBottomOf="@id/btnCau2" />

    <Button
        android:id="@+id/btnCau1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="460dp"
        android:backgroundTint="#00A6F1"
        android:text="Câu 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCau3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00A6F1"
        android:text="Câu 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCau1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="194dp"
        android:layout_marginTop="228dp"
        android:gravity="center"
        android:text="BÀI TẬP"
        android:textColor="#FF0000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
